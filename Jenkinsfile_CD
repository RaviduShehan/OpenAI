pipeline {
    agent any
    environment {
        dockerImageName = "shehan97105/mainapp:v2"
        dockerImage = null

        gkeClusterName = "openai-api-cluster"
        gkeZone = "us-central1-c"
        gkeCredentialsId = "apiservicesauth"
    }
    stages{
        stage('Deploy to Dev Enviornment') {
                steps {
              steps {
                    step([
                        $class: 'KubernetesEngineBuilder',
                        projectId: 'apiservices-384122',
                        credentialsId: gkeCredentialsId,
                        clusterName: gkeClusterName,
                        location: gkeZone,
                        manifestPattern: 'maindev.yml']
                         )
                        }
                }
        stage('Deploy to Test Enviornment') {
                steps {
                    script {
                         kubernetesDeploy(configs: 'maintest.yml', kubeconfigId:'kubernetesconfigpwd')
                        }
                }
        }
        stage('Deploy to Prod Enviornment') {
                steps {
                    script {
                         kubernetesDeploy(configs: 'mainprod.yml', kubeconfigId:'kubernetesconfigpwd')
                        }
                    }
        }
    }
}
}
